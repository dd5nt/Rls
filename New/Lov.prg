PROC START_LOV;
  MSG(3501);
  PRG_STOP(LOV.STOP_LOV);
  MSG(3503);
  PRG_START(LOV.ON_M54_M55);
  PRG_START(LOV.ON_M61);
  PRG_START(LOV.ON_M52);
ENDPROC

PROC STOP_LOV;
  MSG(3502);
  PRG_STOP(LOV.START_LOV);
  PRG_START(LOV.OFF_M54_M55);
  PRG_START(LOV.OFF_M61);
  PRG_START(LOV.OFF_M52);
ENDPROC

PROC ON_M54_M55;
  OFF(M55);
  IF( MEM_ON_M54_M55) 
    ON(M54);
    WAIT(,TIMER_M54_M55,TIME_1H);
  END;
  OFF(M54);
  ON(M55);
  OFF(MEM_ON_M54_M55);
  WAIT(,TIMER_M54_M55,TIME_1H);
  ON(MEM_ON_M54_M55);
  LOOP;  
ENDPROC

PROC OFF_M54_M55;
  MSG(5104);
  PRG_STOP(LOV.ON_M54_M55);
  OFF(M54);
  OFF(M55);
ENDPROC

PROC ON_M61;
  MSG(3505);
  ON(M61);
ENDPROC

PROC OFF_M61;
  MSG(3506);
  OFF(M61);
ENDPROC

PROC ON_M52;
  MSG(3507);
  ON(M52);
ENDPROC

PROC OFF_M52;
  MSG(3508);
  OFF(M52);
ENDPROC

PROC ON_M51;
  PRG_STOP(LOV.OFF_M51);
  ON(M51);
  WAIT(,TIMER_M51,TIME_10M);
  PRG_START(LOV.OFF_M51);
ENDPROC

PROC OFF_M51;
  PRG_STOP(LOV.ON_M51);
  OFF(M51);
ENDPROC
