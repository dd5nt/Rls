PROC START_CHECK_ALERT;
  IF( BV52 < 0 ) MSG('0000', 'BV52'); END;
  IF( M54 && M55 && BV52 <= 5) MSG('0000','M54 M55'); END;
  IF( BV61 < 0 ) MSG('0000', 'BV61'); END;
  IF( M61 && BV61 <= 180.5) MSG('0000','M61'); END;
  IF( BP41 < 100 && BP42 < 100) MSG('0000','Not Argon'); END;
  LOOP;
ENDPROC;

PROC STOP_CHECK_ALERT;
  PRG_STOP(ALERT.START_CHECK_ALERT);
ENDPROC;